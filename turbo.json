{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "dev": {
      "dependsOn": ["db:build", "db:push", "^build:tsc"],
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "inputs": ["prisma/schema.prisma"],
      "outputMode": "new-only",
      "cache": false
    },
    "db:build": {
      "inputs": ["prisma/schema.prisma"],
      "outputMode": "new-only",
      "cache": false
    },
    "build:next": {
      "dependsOn": ["topo", "db:build", "^build:tsc"],
      "inputs": [
        "package.json",
        "tsconfig.json",
        "next.config.js",
        "tailwind.config.ts",
        "!.next/**",
        "**/*.ts",
        "**/*.tsx"
      ],
      "outputs": [".next/**", "out/**"],
      "outputMode": "new-only"
    },
    "build:tsc": {
      "dependsOn": ["topo", "db:build", "^build:tsc"],
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "tsconfig.json",
        "!.next/**",
        "!*/**/*.test.ts",
        "!*/**/*.test.tsx",
        "!*/**/*.e2e.ts",
        "!*/**/*.e2e.tsx",
        "!*/**/*.cy.ts"
      ],
      "outputMode": "new-only"
    },
    "build": {
      "dependsOn": ["topo", "build:next", "db:build", "build:tsc"]
    },
    "test:unit": {
      "dependsOn": ["build:tsc", "db:build"],
      "inputs": ["**/*.test.ts", "**/*.test.tsx", "vitest.config.mts"],
      "outputMode": "new-only"
    },
    "test:db:push": {
      "inputs": ["prisma/schema.prisma"],
      "outputMode": "new-only",
      "cache": false
    },
    "test:integration": {
      "dependsOn": ["build:tsc", "db:build", "test:db:push"],
      "inputs": ["**/*.test.ts", "**/*.test.tsx", "vitest.config.mts"],
      "outputMode": "new-only"
    },
    "test:e2e": {
      "dependsOn": ["build:tsc", "db:build", "test:db:push"],
      "inputs": [
        "**/*.e2e.ts",
        "**/*.e2e.tsx",
        "**/*.cy.ts",
        "cypress.config.js"
      ],
      "outputMode": "new-only"
    },
    "test": {
      "dependsOn": ["test:unit", "test:integration", "test:e2e"],
      "outputMode": "new-only"
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    },
    "lint": {}
  }
}
